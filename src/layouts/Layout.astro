---
import Head from '../components/astro/Head.astro';

export interface Props {
  headTitle: string;
  headDescription?: string;
}

const { headTitle, headDescription = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={headTitle} description={headDescription} />
  <body
    class="dark:bg-greyDarker bg-white dark:text-white h-full text-zinc-800"
  >
    <slot />
  </body>
</html>
